<section class="section-one">
  <h1 id="ethereum-title">Ethereum Balance</h1>
  <form action="/" method="GET">
    <label>
      <input
      name="ethereumAddress"
        type="text"
        id="ethereum-input"
        placeholder="Please fill in your Ethereum address"
      />
    </label>
    <br />
    <input id="submitethereum" onclick ="getEthereumAddress()" type="submit" value="Submit" />
  </form>
 <br />
      {{#if errorMessage }}
  <p style="color:rgb(240, 68, 16)">{{errorMessage}}</p>
{{/if}}
</section>
<section class="section-two">
  <h1 id="ethereum-total-amount">Total Ethereum Amount:</h1>
    <label>
      <input
      value="{{totalEthereum}}"
      name="totalEthereum"
        type="text"
        id ="total-amount"
        placeholder="Total Amount"
        readonly
      />
    </label>
    <div class="info">
    <div class="error">

</div>
</div>
</section>