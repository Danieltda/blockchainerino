<section class="portfolio-section">
<h1 id="portfolio-header">Manage your portfolio!</h1>
<form action="./portfolio" method="POST">
  <label class="title-portfolio">Select Your Coin
    <select name="coin" id="coinname" onChange="update()">
      {{#each coinname}}
          <option  
            name="coin"
            value={{this.coinname}}
            data-coinvalue="{{this.coinprice}}"
          >{{this.coinname}}</option>
        {{/each}}
      
    </select>
  </label>
  <br />
  <label class="title-portfolio">
    Current Price
    <input type="text" name="currentPrice" id="current-price" readonly />
  </label>
  <br />
  <label class="title-portfolio">
    Crypto Amount
    <input
      placeholder="Please fill in the amount"
      type="number"
      name="amount"
      id="total-amount"
      step=".01"
      onchange="totalValue()"
    />
  </label>
  <br />
  <label class="title-portfolio">
    Total Value
    <input type="text" name="totalvalue" id="total-value" readonly />
  </label>
  <br />
  <label>
    <input id="submit-portfolio" type="submit" value="Submit" />
  </label>
</form>
</section>
<section class="your-portfolio">
  <h2>Your portfolio</h2>
  <label action="./portfolio" method="GET">
    <ul id="dynamic-list"></ul>
    Coin
    <input type="text" name="newcoin" id="new-coin" />
  </label>
  <br />
  <label>
    Current Price
    <input type="text" name="pricenow" id="price-now" />
  </label>
  <br />
  <label>
    Amount
    <input type="text" name="amountnow" id="amount-now" />
  </label>
</section>

<script src="/js/handlePortfolio.js"></script>