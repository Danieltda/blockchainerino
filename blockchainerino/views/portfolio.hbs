<section class="portfolio-section">
<h1 id="portfolio-header">Manage your portfolio!</h1>
<form action="./portfolio" method="POST">
  <label class="title-portfolio">Select Your Coin
    <select name="coin" id="coinname" onChange="update()">
      {{#each coinname}}
          <option  
            name="coin"
            value={{this.coinname}}
            data-coinvalue="{{this.coinprice}}"
          >{{this.coinname}}</option>
        {{/each}}
      
    </select>
  </label>
  <br />
  <label class="title-portfolio">
    Current Price in USD
    <input type="text" name="currentPrice" id="current-price" readonly />
  </label>
  <br />
  <label class="title-portfolio">
    Crypto Amount
    <input
      placeholder="Please fill in the amount"
      type="number"
      name="amount"
      id="total-amount"
      step=".01"
      onchange="totalValue()"
    />
  </label>
  <br />
  <label class="title-portfolio">
    Total Value
    <input type="text" name="totalvalue" id="total-value" readonly />
  </label>
  <br />
  <label>
    <input id="submit-portfolio" type="submit" value="Submit"  class="submitbotton"/>
  </label>
</form>
</section>
<section class="your-portfolio" onclick="hidePortfolio()">
  <h2>Your portfolio</h2>
  <label action="./portfolio" method="GET"></label>
<table id="table">
    <thead>
    <tr class="tr">
        <th>Coin</th>
        <th>Price in USD</th>
        <th>Amount</th>
        <th>Total Value</th>
    </tr>
    </thead>
    <tbody id="delete-row">
      {{#each personalPortfolio}}
      <tr><td class="my-portfolio-td">{{this.coin}}</td>
      <td class="my-portfolio-td">{{this.currentPrice}}</td>
      <td class="my-portfolio-td">{{this.amount}}</td>
      <td class="my-portfolio-td">{{this.totalvalue}}</td>
      </tr>
      
      {{/each}}

    </tbody>
</table>
  <label>
    <input id="submit-myportfolio" type="submit" value="Show Latest Value" />
  </label>
  <form action="portfolio/delete" method="GET">
    <input id="delete-lastentry" type="submit" value="Delete First Entry" onclick ="deleteEntry()"/>
</form>
</section>

<script src="/js/handlePortfolio.js"></script>